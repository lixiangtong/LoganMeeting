<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_screenshare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:id="@+id/videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.logansoft.lubo.loganmeeting.utils.YUVVideoView
            android:id="@+id/yuv_self"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter" />

        <com.logansoft.lubo.loganmeeting.utils.YUVVideoView
            android:id="@+id/yuv_peer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/option_video"
        >
        <TextView
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/nav_btn_back"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="语文教研室   10人"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/right_setting"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="设置"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"

            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/option_video"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rgOptions"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rbVideo"
                style="@style/CommonRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/selector_video"
                android:text="@string/video" />

            <RadioButton
                android:id="@+id/rbAttendee"
                style="@style/CommonRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/selector_attendee"
                android:text="@string/attendee" />

            <RadioButton
                android:id="@+id/rbDocument"
                style="@style/CommonRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/selector_document"
                android:text="@string/document" />
        </RadioGroup>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <CheckBox
            android:id="@+id/rbSwitchCamera"
            style="@style/CommonRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/switchcamera_icon"
            android:text="@string/switch_camera" />

        <CheckBox
            android:id="@+id/cbCamera"
            style="@style/CommonRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_camera"
            android:text="@string/camera" />

        <CheckBox
            android:id="@+id/cbVolume"
            style="@style/CommonRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/selector_volume"
            android:text="@string/volume" />

        <CheckBox
            android:id="@+id/cbMicphone"
            style="@style/CommonRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/selector_micphone"
            android:text="@string/micphone" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/setting_background"
        android:layout_alignParentRight="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            >
            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tvClose"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/close_light"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            >
            <TextView
                style="@style/textView_meeting_info"
                android:text="全体静音"
                android:layout_centerVertical="true"
                />

            <CheckBox
                android:id="@+id/cbMute"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/selector_mute"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider"/>

        <TextView
            style="@style/textView_meeting_info"
            android:textColor="#777777"
            android:text="会议信息"
            android:layout_marginTop="19dp"
            />

        <TextView
            android:id="@+id/tvMeetingID"
            style="@style/textView_meeting_info"
            android:text="会议ID："
            android:layout_marginTop="22dp"
            />
        <TextView
            android:id="@+id/tvStartingTime"
            style="@style/textView_meeting_info"
            android:text="开始时间："
            android:layout_marginTop="22dp"
            />
        <TextView
            android:id="@+id/tvMeetingPass"
            style="@style/textView_meeting_info"
            android:text="会议密码："
            android:layout_marginTop="22dp"
            />
        <TextView
            android:id="@+id/tvLockState"
            style="@style/textView_meeting_info"
            android:text="锁门状态："
            android:layout_marginTop="22dp"
            />
    </LinearLayout>
</RelativeLayout>