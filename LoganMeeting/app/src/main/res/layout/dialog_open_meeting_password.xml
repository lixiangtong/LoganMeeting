<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改会议密码"
        android:textColor="#58646d"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tvOpenPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="3dp"
        android:textSize="18sp"
        android:text="当前会议室密码：未开启"
        />

    <Button
        android:id="@+id/btnOpenPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_btn_dialog_meeting_pass"
        android:text="开启密码"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnClosePass"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_btn_dialog_meeting_pass"
                android:text="关闭密码"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/btnReplacePass"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_btn_dialog_pass_replace"
                android:text="更换密码"
                android:textColor="@color/start_color"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
</LinearLayout>